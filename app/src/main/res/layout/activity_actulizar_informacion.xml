<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D1818"
    android:screenOrientation="portrait"
    tools:context=".ActualizarInformacion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="690dp">

            <EditText
                android:id="@+id/editTextActNombre"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="190dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="Nombre/s"
                android:inputType="textPersonName"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editTextActApellidoP"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTextActNombre"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="Apellido paterno"
                android:inputType="textPersonName"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextActApellidoM"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTextActApellidoP"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="Apellido materno"
                android:inputType="textPersonName"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextActEdad"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTextActApellidoM"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="Edad"
                android:inputType="textPersonName"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextActSexo"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTextActEdad"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="Sexo"
                android:inputType="textPersonName"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextActTelefono"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTextActSexo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="N.º teléfono"
                android:inputType="phone"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextActCorreoE"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTextActTelefono"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="Correo electronico"
                android:inputType="textEmailAddress"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextActNombreU"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTextActCorreoE"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="Nombre de usuario"
                android:inputType="textPersonName"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextActContraseña"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTextActNombreU"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextActConfirmarCont"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTextActContraseña"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_textos"
                android:ems="10"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textColorHint="#7F7F7F"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonAceptarCamb"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/editTextActConfirmarCont"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/forma_boton2"
                android:onClick="irLogin"
                android:text="Aplicar cambios"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>

    </ScrollView>


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/fondo_actualizar" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/logo_actinf" />


</RelativeLayout>